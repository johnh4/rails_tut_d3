<div class="row">
	<aside class="span4">
		<%= gravatar_for @user, size: 52 %>
		<h1><%= @user.name %></h1>
		<span><%= link_to "View my Profile", @user %></span>
		<span><%= pluralize(@user.microposts.count, "Micropost") %></span>
		<%= render 'shared/stats' %>
	</aside>
	<div class="span8">
		<%= render 'follow_form' %>
		<h3>Microposts (<%= @user.microposts.count %>) </h3>
		<% if @user.microposts.any? %>
			<ul class="microposts">
				<%= render @microposts %>
			</ul>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>