<div class="row">
	<aside class="span4">
		<%= gravatar_for @user, size: 52 %>
		<h1><%= @user.name %></h1>
		<span><%= link_to "View my Profile", @user %></span>
		<span><%= pluralize(@user.microposts.count, "Micropost") %></span>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<div class="user_avatars">
				<% @users.each do |user| %>
					<%= link_to gravatar_for(user, size: 30), user %>
				<% end %>
			</div>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
			<%= render @users %>
			<%= will_paginate @users %>
		<% end %>
	</div>
</div>